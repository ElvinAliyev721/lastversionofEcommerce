
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>HardJob</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form class="pt-3" method="post">
                    <span asp-validation-summary="All"></span>
                    <input name="Code" type="text" />
                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">OK</button>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        <a asp-action="ForgotPassword" class="text-primary">Send Code Again</a>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        Don't have an account? <a asp-action="Register" class="text-primary">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>