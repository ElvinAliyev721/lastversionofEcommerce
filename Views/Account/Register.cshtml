@model RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>HardJob</title>
</head>
<body>
    <div class='box'>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post">
            <div class='box-form'>
                <div class='box-login-tab'></div>
                <div class='box-login-title'>
                    <div class='i i-login'></div>
                    <h2>Register</h2>
                </div>
                <div class='box-login'>
                    <div class='fieldset-body' id='login_form'>
                        <button onclick="openRegisterInfo();" class='b b-form i i-more' title='Mais Informações'></button>
                        <p class='field'>
                            <label asp-for="FullName"></label>
                            <input asp-for="FullName" />
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </p>
                        <p class='field'>
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </p>
                        <p class='field'>
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="w-100" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </p>
                        <p class='field'>
                            <label asp-for="Password"></label>
                            <input asp-for="Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </p>
                        <p class='field'>
                            <label asp-for="PasswordConfirm"></label>
                            <input asp-for="PasswordConfirm" />
                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                        </p>
                        <label class='checkbox'>
                            <input type='checkbox' value='TRUE' title='Keep me Signed in' /> Keep me Signed in
                        </label>

                        <button class="btn btn-danger mb-2" type='submit' id='do_login'>Get Started</button>
                    </div>
                </div>
            </div>

        </form>

        <div class='box-info'>
            <p>
                <button onclick="closeRegisterInfo();" class='b b-info i i-left' title='Back to Sign In'></button>
                <h3>Need Help?</h3>
            </p>
            <div class='line-wh'></div>
            <a asp-controller="Account" asp-action="ForgotPassword" class='btn b-support' title='Forgot Password?'> Forgot Password?</a>
            <a class='b-support btn' title='Contact Support'> Contact Support</a>
            <div class='line-wh'></div>
            <a asp-controller="Account" asp-action="Login" class='b-cta btn btn-danger' title='Sign up now!'> LOGIN </a>
        </div>
    </div>

    <script src="~/assets/js/Register.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
