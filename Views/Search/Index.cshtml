
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>HardJob</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">

                <ul class="list-unstyled py-3" id="searchList">
                    <li class="px-3">
                        <input id="input-search" type="text" placeholder="Search">
                        <i class="fas fa-search my-auto" id="search"></i>
                    </li>
                    <li>
                        <a></a>
                    </li>
                </ul>
                <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Go Shopping</a>
            </div>
        </div>
    </div>
    <script>
        $(document).on("keyup", "#input-search", function () {
            var search = $(this).val().trim();
            $("#searchList li").slice(1).remove();
            if (search!=null && search!="") {
                $.ajax({
                    url: "/Search/Search?search=" + search,
                    type: "Get",
                    success: function (res) {
                        $("#searchList").append(res);
                    }
                })
            }
        })
    </script>
</body>
</html>
