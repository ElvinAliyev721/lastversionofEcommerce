@model IEnumerable<GroupOfProduct>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Products</h4>
                    <div class="table-responsive pt-3">
                        <a class="btn btn-dark w-100" asp-action="Create">Create Product</a>
                        @if (Model.Count() > 0)
                        {
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (GroupOfProduct group in Model)
                                    {

                                        <tr>
                                            <td>

                                                @foreach (ProductImage image in group.ProductImages)
                                                {
                                                    <img style="width:50px;height:50px" src="~/img/@image.Image" alt="@image.Image" />
                                                }
                                            </td>
                                            <td>
                                                @group.Name
                                            </td>
                                            <td>
                                                @group.Price
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="GoProducts" asp-route-id="@group.Id">GoProducts</a>
                                                <a class="btn btn-warning" asp-action="UpdateGroup" asp-route-id="@group.Id">UpdateGroup</a>
                                                <a class="btn btn-danger" asp-action="DeleteGroup" asp-route-id="@group.Id">DeleteGroup</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>