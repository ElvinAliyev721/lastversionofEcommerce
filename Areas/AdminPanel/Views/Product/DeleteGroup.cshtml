@model GroupOfProduct
@{
    ViewData["Title"] = "DeleteGroup";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Main Image</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Name</td>
                        <td>
                            <img style="width:50px;" src="~/img/@Model.ProductImages.FirstOrDefault().Image" alt="Alternate Text" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <div>
                <form class="forms-sample" method="post">
                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>