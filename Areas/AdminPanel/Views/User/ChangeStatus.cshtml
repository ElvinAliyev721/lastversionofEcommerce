@model AppUser
@{
    ViewData["Title"] = "ChangeStatus";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">FullName</th>
                        <th scope="col">Email</th>
                        <th scope="col">UserName</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.FullName</td>
                        <td>@Model.Email</td>
                        <td>@Model.UserName</td>
                    </tr>
                </tbody>
            </table>
            <div>
                <form class="forms-sample" method="post">
                    @if (Model.IsDeleted)
                    {


                        <input type="hidden" name="Status" value="false" />
                        <button type="submit" class="btn btn-success mr-2">Activate</button>
                    }
                    else
                    {
                        <input type="hidden" name="Status" value="true" />
                        <button type="submit" class="btn btn-danger mr-2">De Activate</button>
                    }

                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>