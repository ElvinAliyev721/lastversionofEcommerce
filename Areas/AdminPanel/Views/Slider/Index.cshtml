@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>
                    <div class="table-responsive pt-3">
                        @if (Model.Count() < 5)
                        {
                            <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
                        }
                        @if (Model.Count() > 0)
                        {
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Slider item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/img/@item.Image" style="width:150px; height:200px;border:unset;border-radius:unset;" />
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                <a class="btn btn-warning mr-2 ml-2" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>